# üìù PERSONEL TAKIP API - ENVIRONMENT CONFIGURATION
# Copy this file to .env and update values for your environment

# Environment Configuration
PERSONEL_TAKIP_ENVIRONMENT=development
PERSONEL_TAKIP_DEBUG=true
PERSONEL_TAKIP_APP_NAME=Personel Takip API
PERSONEL_TAKIP_APP_VERSION=1.0.0
PERSONEL_TAKIP_DESCRIPTION=Personel ve g√ºnl√ºk kayƒ±t takip sistemi

# Database Configuration
PERSONEL_TAKIP_DATABASE__HOST=localhost
PERSONEL_TAKIP_DATABASE__PORT=5432
PERSONEL_TAKIP_DATABASE__USERNAME=postgres
PERSONEL_TAKIP_DATABASE__PASSWORD=your-db-password
PERSONEL_TAKIP_DATABASE__DATABASE=personel_takip
PERSONEL_TAKIP_DATABASE__POOL_SIZE=5
PERSONEL_TAKIP_DATABASE__MAX_OVERFLOW=10

# Security Configuration
PERSONEL_TAKIP_SECURITY__SECRET_KEY=your-super-secret-key-change-this-in-production
PERSONEL_TAKIP_SECURITY__ALGORITHM=HS256
PERSONEL_TAKIP_SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
PERSONEL_TAKIP_SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7
PERSONEL_TAKIP_SECURITY__PASSWORD_MIN_LENGTH=8
PERSONEL_TAKIP_SECURITY__MAX_LOGIN_ATTEMPTS=5
PERSONEL_TAKIP_SECURITY__LOCKOUT_DURATION_MINUTES=15

# Server Configuration
PERSONEL_TAKIP_SERVER__HOST=127.0.0.1
PERSONEL_TAKIP_SERVER__PORT=8002
PERSONEL_TAKIP_SERVER__WORKERS=1
PERSONEL_TAKIP_SERVER__RELOAD=false
PERSONEL_TAKIP_SERVER__LOG_LEVEL=info
PERSONEL_TAKIP_SERVER__TIMEOUT_KEEP_ALIVE=5
PERSONEL_TAKIP_SERVER__MAX_REQUEST_SIZE=16777216

# Rate Limiting
PERSONEL_TAKIP_RATE_LIMIT_REQUESTS=100
PERSONEL_TAKIP_RATE_LIMIT_WINDOW_MINUTES=1

# Export Settings
PERSONEL_TAKIP_EXPORT_PATH=./exports
PERSONEL_TAKIP_MAX_EXPORT_RECORDS=10000

# Logging Configuration
PERSONEL_TAKIP_LOG_FILE=personel_takip.log
PERSONEL_TAKIP_LOG_LEVEL=INFO
PERSONEL_TAKIP_LOG_ROTATION_DAYS=7
PERSONEL_TAKIP_LOG_MAX_SIZE_MB=50

# Performance Settings
PERSONEL_TAKIP_CACHE_TTL_MINUTES=5
PERSONEL_TAKIP_BACKGROUND_TASK_TIMEOUT=300

# Monitoring
PERSONEL_TAKIP_ENABLE_METRICS=true
PERSONEL_TAKIP_METRICS_ENDPOINT_ENABLED=true

# Development Settings (only for development environment)
