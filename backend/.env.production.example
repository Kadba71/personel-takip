# Production environment for Personel Takip
# Copy to .env and edit secure values before starting

# Core
PERSONEL_TAKIP_ENVIRONMENT=production
PERSONEL_TAKIP_DEBUG=false
PERSONEL_TAKIP_APP_NAME=Personel Takip API
PERSONEL_TAKIP_APP_VERSION=1.0.0
PERSONEL_TAKIP_DESCRIPTION=Personel ve günlük kayıt takip sistemi

# Security
# MUST change these
PERSONEL_TAKIP_SECURITY__SECRET_KEY=change-me-strong-secret
PERSONEL_TAKIP_SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=60
PERSONEL_TAKIP_SECURITY__MAX_LOGIN_ATTEMPTS=5
PERSONEL_TAKIP_SECURITY__LOCKOUT_DURATION_MINUTES=15

# Server
PERSONEL_TAKIP_SERVER__HOST=0.0.0.0
PERSONEL_TAKIP_SERVER__PORT=8000
PERSONEL_TAKIP_SERVER__WORKERS=2
PERSONEL_TAKIP_SERVER__RELOAD=false
PERSONEL_TAKIP_SERVER__LOG_LEVEL=info

# Logging
PERSONEL_TAKIP_LOG_FILE=personel_takip.log
PERSONEL_TAKIP_LOG_LEVEL=INFO
PERSONEL_TAKIP_LOG_ROTATION_DAYS=14
PERSONEL_TAKIP_LOG_MAX_SIZE_MB=100

# Exports
PERSONEL_TAKIP_EXPORT_PATH=./exports
PERSONEL_TAKIP_MAX_EXPORT_RECORDS=20000

# Optional admin bootstrap (first run only)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your-strong-admin-password
